@using Web.Utility
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CouponDto>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <h1 class="text-white py-1" style="margin: 0">Coupon List</h1>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            @if (User.IsInRole(StaticDetails.RoleAdmin))
            {
                <div class="col-6 text-end">
                    <a asp-action="CouponCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Create New Coupon</a>

                </div>
            }
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>
                    Coupon Code
                </th>
                <th>
                    Discount Amount
                </th>
                <th>
                    Minimum Amount
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                             @item.CouponCode
                        </td>
                        <td class="align-middle">
                             @((item.DiscountAmount).ToString("c"))
                        </td>
                        <td class="align-middle">
                            @((item.MinAmount).ToString("c"))
                        </td>
                        <td class="d-flex justify-content-start">
                            <a asp-action="CouponDelete" asp-route-couponId="@item.CouponId" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>