@model ProductDto

<form asp-action="ProductDelete">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3 d-flex justify-content-between">
            <div class="row">
                <h1 class="text-white py-1" style="margin: 0">Delete Product</h1>
            </div>
        </div>
        <div class="row mx-auto p-4" style="width: 60%">
            <div>
                <label class="control-label pt-2" style="font-size:20px;"> Name</label>
            </div>
            <div>
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div>
                <label class="control-label pt-2" style="font-size:20px;">Category Name</label>
            </div>
            <div>
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>
            <div>
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div>
                <textarea asp-for="Description" disabled class="form-control" rows="5" ></textarea>
            </div>
            <div>
                <label class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div>
                <input asp-for="Price" disabled class="form-control" />
            </div>
            <div>
                <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
            </div>
            <div>
                <input asp-for="ImageUrl" disabled class="form-control" />
            </div>

            <div class="d-flex justify-content-between pt-4">
                <div class="col-5">
                    <a asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Delete" class="btn btn-danger form-control" />
                </div>
            </div>

        </div>

        <div>
        </div>
    </div>
</form>


@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}