@model ProductDto

<form method="post">
    <input asp-for="ProductId" hidden />
    <div class=" pt-4">
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header row" style="border-radius: 0;">
                <div class="col-12 col-md-6">
                    <h1>@Model.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1> @($"{Model.Price:c}")</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageUrl" style="border-radius: 50px 0 30px 30px" width="100%" alt="" />
                        </div>
                        <div class="col-12 col-lg-8 p-1">
                            <div class="row px-lg-3">

                                <div class="col-12">
                                    <span class="badge bg-primary text-white p-3 border">@Model.CategoryName</span>
                                    <p class="text-secondary pt-3">@Html.Raw(Model.Description)</p>
                                </div>
                            </div>
                            <div class="row g-3 align-items-center px-lg-3 pt-3">
                                <div class="col-auto">
                                    <label for="inputW" class="col-form-label">Quantity</label>
                                </div>
                                <div class="col-auto">
                                    <input asp-for="Count" id="inputW" class="form-control" aria-describedby="Inline" />
                                    <span asp-validation-for="Count" class="text-danger"></span>
                                </div>
                                <div class="col-auto">
                                    <span id="Inline" class="form-text">
                                        UN.
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row">
                <div class="col-12 col-md-6 pb-1 ">
                    <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                </div>
                <div class="col-12 col-md-6 ">
                    <button type="submit" class="btn btn-primary form-control btn-lg" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}